<resources>

    <!-- Theme -->
    <color name="theme_primary">#42A5F5</color>
    <color name="theme_accent">#EC1561</color>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary</item>
        <item name="colorAccent">@color/theme_accent</item>
    </style>

    <style name="WearBasicsButton">
        <item name="android:minHeight">72dp</item>>
        <item name="android:fontFamily">sans-serif-slab</item>
    </style>

    <style name="WearBasicsHeaderTextView">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/theme_primary</item>
    </style>

</resources>
